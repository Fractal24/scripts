#!/usr/bin/env ruby

require 'trollop'

ARGV.push("--help") if ARGV.empty?
opts = Trollop::options do
  banner File.basename($0)
  opt :input, "input fastqs (R1)", :required=>true, :type=>:strings
  opt :db, "kraken db", :default=>"/data/MicrobiomeCore/krakendb/all"
  opt :threads, "threads", :default=>2
end

opts.input.each do |fq|
  r2 = fq.gsub("_R1", "_R2")
  if File.size(fq) > 14 && File.exists?(fq) && File.exists?(r2)
    data = "/data/#{ENV["USER"]}"
    out = data+"/"+ File.basename(fq).split("_R1").first+".kraken"
    o1 = "/lscratch/$SLURM_JOB_ID/"+File.basename(out)
    if !File.exists?(out)
      cmd = "cp -r #{opts.db} /lscratch/$SLURM_JOB_ID;"
      cmd += "kraken -db /lscratch/$SLURM_JOB_ID/#{File.basename(opts.db)} "
      cmd += "--paired --fastq-input --bzip2-compressed "
      cmd += "--output #{o1} #{fq} #{r2} "
      cmd += "--threads #{opts.threads};"
      cmd += "cp #{o1} #{out}"
      print cmd+"\n"
    end
  end
end
